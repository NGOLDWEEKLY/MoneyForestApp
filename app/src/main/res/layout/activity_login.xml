<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        tools:context=".user.LoginActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1.5"
                android:text="@string/app_name"
                android:textColor="@color/green"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Let's get rich together."
                android:textColor="@color/green"
                android:textSize="19dp" />

            <ImageView
                android:id="@+id/tree"
                android:layout_width="179dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:src="@drawable/moneytree" />

            <EditText
                android:id="@+id/nameLogin"
                android:layout_width="276dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:backgroundTint="@color/medium_sea_green"
                android:hint="Email">
                </EditText>

            <EditText
                android:id="@+id/pwdLogin"
                android:layout_width="276dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:backgroundTint="@color/medium_sea_green"
                android:inputType="textPassword"
                android:hint="Password">

            </EditText>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:layout_height="40dp"
                android:layout_weight="2" />

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="272dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:background="@color/medium_sea_green"
                android:text="LOGIN"
                android:textColor="@color/white"
                android:textSize="20dp">

            </Button>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/medium_sea_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in with"
                    android:textColor="@color/medium_sea_green"
                    android:textSize="19dp" />

                <View
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/medium_sea_green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fb"
                    android:layout_width="48dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:src="@drawable/facebook">

                </ImageView>

                <ImageView
                    android:id="@+id/google"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:src="@drawable/google">


                </ImageView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Not register yet?"
                    android:textColor="@color/black"
                    android:textSize="17dp" />


                <TextView
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text="Sign up"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

            </LinearLayout>

        </LinearLayout>
</FrameLayout>