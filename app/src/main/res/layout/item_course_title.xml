<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/section_title_ll">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/course_title_ll"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:id="@+id/section_type_iv"
            android:tint="@color/medium_sea_green"
            android:src="@drawable/challenge">
        </ImageView>
    <TextView
        android:id="@+id/course_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:fontFamily="@font/dmsans_font"
        android:layout_weight="8"
        android:ems="10"
        android:padding="8dp"
        />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:id="@+id/course_title_lock"
            android:tint="@color/dark_gray"
            android:src="@drawable/ic_course_locked">
        </ImageView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:id="@+id/course_title_unlock"
            android:tint="@color/medium_sea_green"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_start_east_24">
        </ImageView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:visibility="gone"
            android:id="@+id/course_title_done"
            android:tint="@color/medium_sea_green"
            android:src="@drawable/ic_baseline_check_circle_24">
        </ImageView>

    </LinearLayout>
</LinearLayout>